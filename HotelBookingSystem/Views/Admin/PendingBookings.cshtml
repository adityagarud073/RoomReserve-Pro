@model List<HotelBookingSystem.Models.Booking>

<h2 class="text-center">📌 Pending Bookings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Room</th>
            <th>Booking Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
               
            @*     <td>@booking.CustomerName</td> *@
            @*     <td>@booking.CustomerEmail</td> *@
                <td>@booking.Room.RoomName</td>
                <td>@booking.BookingDate</td>
                <td>
                    <a asp-action="ConfirmBooking" asp-route-bookingId="@booking.BookingId" class="btn btn-success">Confirm</a>
                    <a asp-action="RejectBooking" asp-route-bookingId="@booking.BookingId" class="btn btn-danger">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
