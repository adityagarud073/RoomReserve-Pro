@model Room

<form asp-action="AddRoom" method="post" enctype="multipart/form-data" class="container mt-4 p-4 border rounded shadow">
    <h3 class="text-center mb-4">Add Room</h3>

    <div class="mb-3">
        <label class="form-label">Hotel Name:</label>
        <input type="text" asp-for="RoomName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Description:</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Rent (per day):</label>
        <input type="number" asp-for="Rent" class="form-control" required />
    </div>

    @* <div class="mb-3"> *@
    @*     <label class="form-label">Specifications (e.g., AC, WiFi, TV):</label> *@
    @*     <input type="text" asp-for="Specifications" class="form-control" /> *@
    @* </div> *@

    <div class="mb-3">
        <label class="form-label">Location:</label>
        <input type="text" asp-for="Location" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Available:</label>
        <select asp-for="IsAvailable" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Image:</label>
        <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary w-100">Add Room</button>
</form>
