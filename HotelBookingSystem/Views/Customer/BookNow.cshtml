@model HotelBookingSystem.Models.Room

<h2 class="text-center">Confirm Your Booking</h2>

<div class="container">
    <div class="card p-4 shadow rounded" style="max-width: 500px; margin: auto;">
        <h4>@Model.RoomName</h4>
        <p>@Model.Description</p>
        <p><strong>Rent:</strong> ₹@Model.Rent / per day</p>
        <p><strong>Location:</strong> @Model.Location</p>

        <form asp-controller="Customer" asp-action="BookRoom" method="post">
            <input type="hidden" name="roomId" value="@Model.RoomId" />

            <label>Name:</label>
            <input type="text" name="FullName" class="form-control" required />

            <label>Email:</label>
            <input type="email" name="Email" class="form-control" required />

            <button type="submit" class="btn btn-success mt-3">Confirm Booking</button>
        </form>

        <a asp-controller="Customer" asp-action="AvailableRooms" class="btn btn-secondary mt-2">Back</a>
    </div>
</div>
